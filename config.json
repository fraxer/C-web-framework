{
    "main": {
        "workers": 1,
        "threads": 1,
        "reload": "hard",
        "buffer_size": 16384,
        "client_max_body_size": 110485760,
        "tmp": "/tmp",
        "gzip": [
            "text/html",
            "application/javascript",
            "application/json"
        ]
    },
    "migrations": {
        "source_directory": "<project directory path>/app/migrations"
    },
    "servers": {
        "s1": {
            "domains": [
                "192.168.1.100",
                "www.example1.com",
                "*.example1.com",
                "(a1|a2|a3).example1.com",
                "(.1|.*|a3).example1.com",
                "mail.*"
            ],
            "ip": "127.0.0.1",
            "port": 80,
            "root": "/var/www/www.example1.com/web",
            "index": "index.html",
            "ratelimits": {
                "one": {
                    "burst": 1,
                    "rate": 0
                },
                "two": {
                    "burst": 15,
                    "rate": 15
                }
            },
            "http": {
                "ratelimit": "one",
                "middlewares": [
                    "middleware_http_test_header"
                ],
                "redirects": {
                    "/section1/(\\d+)/section2/(\\d+)/section3": "/one/{1}/two/{2}/three",
                    "/one/\\d+/two/\\d+/three": "/",
                    "/user": "/persons",
                    "/user(.*)/(\\d)": "/user-{1}-{2}"
                },
                "routes": {
                    "/": {
                        "GET": { "file": "<project directory path>/build/exec/handlers/index/libindex.so", "function": "get", "ratelimit": "one" }
                    },
                    "/wss": {
                        "GET": { "file": "<project directory path>/build/exec/handlers/index/libindex.so", "function": "websocket" }
                    },
                    "/login": {
                        "GET": { "file": "/home/alex/development/server/build/exec/handlers/auth/lib_auth.so", "function": "login" }
                    },
                    "/registration": {
                        "GET": { "file": "/home/alex/development/server/build/exec/handlers/auth/lib_auth.so", "function": "registration" }
                    },
                    "/secret_page": {
                        "GET": { "file": "/home/alex/development/server/build/exec/handlers/auth/lib_auth.so", "function": "secret_page" }
                    },
                    "/file_create_tmpfile": {
                        "GET": { "file": "<project directory path>/build/exec/handlers/files/libfiles.so", "function": "file_create_tmpfile" }
                    },
                    "/file_get_content": {
                        "GET": { "file": "<project directory path>/build/exec/handlers/files/libfiles.so", "function": "file_get_content" }
                    },
                    "/file_put_storage": {
                        "GET": { "file": "<project directory path>/build/exec/handlers/files/libfiles.so", "function": "file_put_storage" }
                    },
                    "/file_get_file_list": {
                        "GET": { "file": "<project directory path>/build/exec/handlers/files/libfiles.so", "function": "file_get_file_list" }
                    },
                    "/file_remove_storage": {
                        "GET": { "file": "<project directory path>/build/exec/handlers/files/libfiles.so", "function": "file_remove_storage" }
                    },
                    "/file_upload_and_put_storage": {
                        "POST": { "file": "<project directory path>/build/exec/handlers/files/libfiles.so", "function": "file_upload_and_put_storage" }
                    },
                    "/file_duplicate_to_storage": {
                        "GET": { "file": "<project directory path>/build/exec/handlers/files/libfiles.so", "function": "file_duplicate_to_storage" }
                    }
                }
            },
            "websockets": {
                "default": { "file": "<project directory path>/build/exec/handlers/ws/libwsindex.so", "function": "default_" },
                "routes": {
                    "/": {
                        "GET": { "file": "<project directory path>/build/exec/handlers/ws/libwsindex.so", "function": "echo" }
                    }
                }
            },
            "tls": {
                "fullchain": "/var/www/server/fullchain.pem",
                "private": "/var/www/server/privkey.pem",
                "ciphers": "TLS_AES_256_GCM_SHA384 TLS_CHACHA20_POLY1305_SHA256 TLS_AES_128_GCM_SHA256 TLS_AES_128_CCM_8_SHA256 TLS_AES_128_CCM_SHA256 ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA256"
            }
        },
        "s2": {
            "domains": [
                "www.example2.com:8080"
            ],
            "ip": "127.0.0.1",
            "port": 8080,
            "root": "/var/www/www.example2.com/web",
            "index": "index.html",
            "http": {
                "routes": {
                    "/": {
                        "GET": { "file": "<project directory path>/build/exec/handlers/index/libindex.so", "function": "index" }
                    }
                }
            }
        }
    },
    "databases": {
        "postgresql": [
            {
                "host_id": "p1",
                "ip": "127.0.0.1",
                "port": 5432,
                "dbname": "dbname",
                "user": "root",
                "password": "",
                "connection_timeout": 3
            }
        ],
        "mysql": [
            {
                "host_id": "m1",
                "ip": "127.0.0.1",
                "port": 3306,
                "dbname": "dbname",
                "user": "root",
                "password": ""
            }
        ],
        "redis": [
            {
                "host_id": "r1",
                "ip": "127.0.0.1",
                "port": 6379,
                "dbindex": 0,
                "user": "",
                "password": ""
            }
        ]
    },
    "storages": {
        "local": {
            "type": "filesystem",
            "root": "/path/to/folder"
        },
        "remote": {
            "type": "s3",
            "access_id": "*",
            "access_secret": "*",
            "protocol": "https",
            "host": "*",
            "port": "",
            "bucket": "*"
        }
    },
    "sessions": {
        "driver": "storage",
        "storage_name": "sessions",
        "lifetime": 60
    },
    "mail": {
        "dkim_private": "/home/alex/dkim_private.pem",
        "dkim_selector": "mail",
        "host": "example.com"
    },
    "mimetypes": {
        "text/html": ["html", "htm", "shtml"],
